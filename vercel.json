{
  "buildCommand": "bash build.sh",
  "outputDirectory": "frontend/dist",
  "installCommand": "bash -c 'if [ -d frontend ]; then cd frontend && npm install; else echo \"❌ Diretório frontend não encontrado!\"; ls -la; exit 1; fi'",
  "framework": "vite",
  "functions": {
    "frontend/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "env": {
    "VITE_API_BASE_URL": "https://sne-radar-api-xxxxx.run.app",
    "VITE_WS_URL": "https://sne-radar-api-xxxxx.run.app",
    "VITE_WALLETCONNECT_PROJECT_ID": "3fcc6bba6f1de962d911bb5b5c3dba68",
    "VITE_SCROLL_RPC_URL": "https://sepolia-rpc.scroll.io",
    "VITE_SIWE_DOMAIN": "radar.snelabs.space",
    "VITE_SIWE_ORIGIN": "https://radar.snelabs.space"
  }
}

